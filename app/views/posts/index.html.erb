<h1 class='text-center'>Public Posts</h1>
  <% @posts.includes(:user).each do |post| %>
    <div class="jumbotron mt-4">
      <p>
      <strong>User:</strong>
      <%= post.user.email.split("@")[0]%>
      </p>
      <p>
      <strong>Title:</strong>
      <%= post.title %>
      </p>
      <p>
      <strong>Body:</strong>
      <%= post.body %>
      </p>
      <p>
        <strong>Comments:<%=post.comments.count%></strong>
      </p>
        <%= link_to 'View Post', post, class:'btn btn-outline-primary' %>
    </div>      
  <% end %>


