<h1 class='text-center'>Posts</h1>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path, class:'btn btn-primary btn-lg mb-4' %>
<% @posts.each do |post| %>
  <div class="jumbotron">
    <p>
    <strong>Title:</strong>
    <%= post.title %>
    </p>

    <p>
    <strong>Body:</strong>
    <%= post.body %>
    </p>
  </div>      
<% end %>
<% end %>


