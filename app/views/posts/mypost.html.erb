<h1 class="text-center">My Posts</h1>
<% if user_signed_in? %>
    <% if @posts.present? %>
        <%= @posts.each do |post| %>
            <div class="jumbotron mt-4">
            <p>
            <strong>User:</strong>
            <%= @user.email.split("@")[0] %>
            </p>
            <p>
            <strong>Title:</strong>
            <%= post.title %>
            </p>
            <p>
            <strong>Body:</strong>
            <%= post.body %>
            </p>
            <p>
            <strong>Comments:</strong>
            <%= post.comments.count %>
            </p>
            <%= link_to 'View post', post, class:'btn btn-primary' %>&nbsp;&nbsp;
            <%= link_to 'Edit post', edit_post_path(post), class:'btn btn-warning' %>&nbsp;&nbsp;
            <%= link_to 'Delete post',post, class:'btn btn-danger', method: :delete, data:{confirm:'Are you sure'} %>
            </div>
        <% end %>       
    <% else %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h4>You have no post, To add a new post</h4><%= link_to 'Click here', new_post_path, class:'btn btn-primary mt-4' %>
        </div>
    <% end %>
<% end %>